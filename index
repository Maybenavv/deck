        function createBlogCard(blog) {
            return `
                <div class="card">
                    <div class="card-content">
                        <h2 class="card-title">${blog.title}</h2>
                        <div class="read-time">${blog.readTime}</div>
                        <p class="card-summary">${blog.summary}</p>
                        <a href="${blog.link}" class="cta-button">
                            Read More
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                            </svg>
                        </a>
                    </div>
                </div>
            `;
        }

        function renderBlogCards() {
            const blogGrid = document.getElementById('blogGrid');
            blogGrid.innerHTML = blogs.map(blog => createBlogCard(blog)).join('');
        }

        // Render the blog cards when the page loads
        document.addEventListener('DOMContentLoaded', renderBlogCards);
    </script>
